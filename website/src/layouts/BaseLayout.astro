---
import NavBar from '../components/NavBar.astro';
import Footer from '../components/Footer.astro';
import '../styles/tailwind.css';
import '../styles/global.css';

const {
  title = 'SQLTemple | AI-powered SQL IDE for modern data teams',
  description =
    'Ship queries faster with Monaco Editor, AI pair-programmer, execution plan insights, schema exploration, and safe automation for Postgres teams.',
  structuredData,
} = Astro.props;
const siteOrigin = Astro.site?.origin ?? 'https://sqltemple.dev';
const currentUrl = Astro.url?.href ?? siteOrigin;
const ogImage = `${siteOrigin}/og.png`;
const ogImageAlt = 'SQLTemple desktop app with Monaco Editor, AI assistant, and query results grid';
---

<html lang="en" class="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="theme-color" content="#0f1117" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="canonical" href={currentUrl} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:site_name" content="SQLTemple" />
    <meta property="og:url" content={currentUrl} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:secure_url" content={ogImage} />
    <meta property="og:image:type" content="image/png" />
    <meta property="og:image:width" content="1536" />
    <meta property="og:image:height" content="1024" />
    <meta property="og:image:alt" content={ogImageAlt} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    <meta name="twitter:image:alt" content={ogImageAlt} />
    {structuredData && <script type="application/ld+json">{JSON.stringify(structuredData)}</script>}
  </head>
  <body class="text-white min-h-screen flex flex-col">
    <NavBar />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>
